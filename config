execute pathogen#infect()

filetype plugin indent on
syntax on
colorscheme spacegray
hi Normal ctermbg=none

set nocompatible
set number
set relativenumber
set hidden
set history=100
set nowrap
set smartcase
set smarttab
set softtabstop=2
set shiftwidth=2
set expandtab
set smartindent
set autoindent
set showmatch
set showcmd
set ttimeoutlen=50
set termguicolors

set laststatus=2

let g:sql_type_default = 'pgsql'

let g:user_emmet_leader_key='<Tab>'
let g:user_emmet_settings = {
\  'javascript.jsx' : {
  \      'extends' : 'jsx',
  \  },
\}


let g:ale_fixers = {
\   'rust': ['rustfmt'],
\   'javascript': ['eslint'],
\}
let g:ale_pattern_options = {
\   '.*\amp.html$': {'ale_enabled': 0},
\}

let g:ale_sign_column_always = 1

let g:elm_setup_keybindings = 0

map <SPACE> <leader>
map <leader>s :source ~/.vimrc<CR>
map <leader>x :x
map <leader>q :q
map <leader>w :w

let &t_SI = "\<Esc>[6 q"
let &t_SR = "\<Esc>[4 q"
let &t_EI = "\<Esc>[2 q"
